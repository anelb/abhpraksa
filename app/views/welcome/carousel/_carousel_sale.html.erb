<div class="col-sm-6 col-md-3 col-lg-3">
  <%= link_to category_product_path(f.categories.first.id, f.id), class: 'thumbnail' do %>
    <div style='height: 80px'>
      <span class="label label-danger discount-home">- <%= f.discount %>%</span>
      <img src="<%= f.picture_link %>" class='img-responsive'>
    </div>
    <p style='margin-top: 15px; margin-bottom: 0px'>
      <%= f.title %>
    </p> 
    <p style='font-size: 15px'><strong><%= f.with_discount %>KM</strong></p>
  <% end %>  
</div>