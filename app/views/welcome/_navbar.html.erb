<div style='width: 100%; height: 400px;' class='cover-image'>
  
  <nav class="navbar navbar-cover">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'abhShoes', root_path, class: "navbar-brand" %>
      </div>
      <div class='collapse navbar-collapse'>
        <ul class="nav navbar-nav navbar-midle">
          <% Category.all.each do |category| %>
            <li><%= link_to category.title, category_path(category) %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <% if current_user.role == 'admin' %>
              <li><%= link_to 'ADMIN', admin_dashboard_index_path %>
            <% end %>

            <% if current_cart.cart_items.blank? %>

              <li><%= link_to "<span class='glyphicon glyphicon-shopping-cart'></span>".html_safe, '#', id: 'navbar-empty-cart' %></li>
            <% else %> 

              <li><%= link_to "<span class='glyphicon glyphicon-shopping-cart'>
                <span class='number-notification'>#{current_cart.count_items}</span>
                </span>".html_safe, cart_path %>
              </li>
            <% end %>
            <% if current_user.orders.blank? %>
              <li id='all-orders-title'>NEMA NARUDZBI</li>
            <% else %>
              <li><%= link_to 'NARUDZBE', orders_path %></li>
            <% end %>
            <li><%= link_to 'LOG OUT', logout_path, method: 'delete' %></li>
          <% else %>
          <% if current_cart.cart_items.blank? %>
            <li><%= link_to "<span class='glyphicon glyphicon-shopping-cart'></span>".html_safe, '#', id: 'navbar-empty-cart' %></li>
          <% else %> 
            <li><%= link_to "<span class='glyphicon glyphicon-shopping-cart'>
              <span class='number-notification'>#{current_cart.count_items}</span>
              </span>".html_safe, cart_path %>
            </li>
          <% end %>
            <li><%= link_to 'LOGIN', sign_in_path %></li>
            <li><%= link_to 'REGISTER', sign_up_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
