<div class='row'>
<span>SALE</span>
</div>
<div class='row'>
  <div id="sale-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" role="listbox">
      <% if @products.length <= 4 %>
        <div class="item active">
          <% @products.each do |product| %>
            <div class="col-sm-6 col-md-4 col-lg-3">
              <%= link_to category_product_path(product.categories.first.id, product.id), class: 'thumbnail' do %>
                <div class='pull-left col-md-10 col-md-offset-1'>
                  <img src="<%= product.photo_url %>" class="img-responsive">
                  
                  <p style='margin-top: 15px; margin-bottom: 0px; width: 150px'>
                    <%= product.title %>
                  </p> 
                  <p style='font-size: 15px'><strong><%= product.price %>KM</strong></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <% @products.each_slice(4) do |slice| %>
          <% if @products.slice(0..3) == slice %>
            <div class="item active">
              <% slice.each do |product| %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                  <%= link_to category_product_path(product.categories.first.id, product.id), class: 'thumbnail' do %>
                    <div class='pull-left col-md-10 col-md-offset-1'>
                      <img src="<%= product.photo_url %>" class="img-responsive">
                      
                      <p style='margin-top: 15px; margin-bottom: 0px; width: 150px'>
                        <%= product.title %>
                      </p> 
                      <p style='font-size: 15px'><strong><%= product.price %>KM</strong></p>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="item">
              <% slice.each do |product| %>
                  <div class="col-sm-6 col-md-4 col-lg-3">
                    <%= link_to category_product_path(product.categories.first.id, product.id), class: 'thumbnail' do %>
                      <div class='pull-left col-md-10 col-md-offset-1'>
                        <img src="<%= product.photo_url %>" class="img-responsive">
                        
                        <p style='margin-top: 15px; margin-bottom: 0px; width: 150px'>
                          <%= product.title %>
                        </p> 
                        <p style='font-size: 15px'><strong><%= product.price %>KM</strong></p>
                      </div>
                    <% end %>
                  </div>
              <% end %>
            </div>  
          <% end %>
        <% end %>
        <a class="left carousel-control" href="#sale-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#sale-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      <% end %>
    </div>
  </div>
</div>