<div class='row'>
  <div class='col-md-6'>
      <h4><%= @product.title %></h4>
      <img src="<%= @product.photo_url %>" class="img-responsive">
  </div>
  <div class='col-md-6'>
    <div class='row'>
      <p><%= @product.description %></p>
    </div>
    <h4>Velicina</h4>
    <ul>
      <% @product.sizes.each do |product| %>
        <li><%= product.product_size %></li>
      <% end %>
    </ul>
    <h4>Boja</h4>
    <ul>
      <% @product.colors.each do |product| %>
        <li><%= product.product_color %></li>
      <% end %>
    </ul>
    <h5>Cijena: <%= @product.price %>KM</h5>
  </div>
</div>
<br>
<div class='row'>
  <p style='text-align: center'>Slicni proizvodi</p>
  <% Product.all.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <a href="#" class="thumbnail">
        <img src="<%= product.photo_url %>" alt="...">
      </a>
    </div>
  <% end %>
</div>

