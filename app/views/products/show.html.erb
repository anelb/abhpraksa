<div class='col-md-10 col-md-offset-1' style='margin-top: 30px'>
  <div class='row'>
    <div class='col-md-6 product-left'>
        <div id='title'>
          <h4><%= @product.title %></h4>
        </div>
        <img src="<%= @product.photo_url %>" class="img-responsive">
    </div>

    <div class='col-md-6 product-right'>
      <div id='description'>
        <p><%= @product.description %></p>
      </div>
      <%= form_for @cart_item, url: { action: 'create', controller: 'cart_items' } do |f| %>
        <div id='size'>
        <%= hidden_field_tag :cart_id, current_cart %>
        <%= hidden_field_tag :product_variant, @product_variant.id %>
        <%= fields_for :products do |product| %>
            <%= product.label :velicina, 'Velicina:' %>
            <%= product.collection_select(:size_id, @product.sizes, :id, :product_size) %>
        <% end %>
        </div>
        <div id='quantity'>
          <h5>Kolicina:</h5>
          <%= text_field_tag 'quantity' %>
        </div>
        <div id='price'>
          <h5>Cijena:</h5>
          <p><%= @product.price %>KM</p>
        </div>
        <div>
          <%= f.submit 'DODAJ U KORPU' %>
        </div> 
      <% end %>
    </div>
  </div>
  <br>
  <div class='row'>
    <h4 style='text-align: center; margin-top: 30px'>Slicni proizvodi</h4>
    <% Product.all.sample(4).each do |product| %>
      <div class="col-xs-6 col-md-3">
        <a href="#" class="thumbnail">
          <img src="<%= product.photo_url %>" alt="...">
          <p><%= product.title %></p>
        </a>
      </div>
    <% end %>
  </div>
</div>

