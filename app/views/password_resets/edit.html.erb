<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <div class='row' style='margin-left: 0px'>
      <h4>Account Recovery</h4>
      <p class='text-recover-account'>Recover account for <%= @user.email %></p>
    </div>
    <div class='row'>
      <div class='col-md-8'>
        <%= form_for @user, url: { controller: 'password_resets', action: 'update' } do |f| %>
          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
              <p style='font-size: 14px; color: #b30000'><%= message %></p>
            <% end %>
          <% end %>
          <%= hidden_field_tag :email, @user.email %>
          <div class='form-group'>
            <%= f.password_field :password, class: 'form-control', placeholder: 'New password' %>
          </div>
          <div class='form-group'>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'New password (again)' %>
          </div>
          <%= f.submit "Recover Account", class: 'btn btn-default form-input reset-password'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
