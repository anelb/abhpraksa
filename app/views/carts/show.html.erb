<div class='row' style='margin-bottom: 30px'>
  <h3 style='margin-left: 30px'>Vasa korpa</h3>
</div>  
<% @cart.each do |cart_item| %>
<div class='row'> 
  <div class='col-md-8 cart-image'>
    <div id='cart-picture' class='col-md-3'>
      <img src="<%= cart_item.product_variant.product.photo_url %>" width='150' height='auto'>
    </div>
    <div id='product-details' class='col-md-6 cart-details'>
      <p>Model: <%= cart_item.product_variant.product.brand.title %></p>
      <p>Velicina: <%= cart_item.product_variant.color.product_color %></p>
      <p>Boja: <%= cart_item.product_variant.color.product_color %></p>
      <p>ID: <%= cart_item.product_variant.product.id %></p>
    </div>
    <div id='cart-info' class='col-md-3'>
      <div class="row">
        <div class='pull-right'>
          <p style='margin-bottom: 0px'>Cijena:</p>
          <p><strong><%= cart_item.product_variant.product.price %>KM</strong></p>
        </div>
      </div>
      <div class="row">
        <div class='pull-right'>
          <p style='display: inline-block'>Kolicina</p>
          <%= text_field_tag :qunatity %>
        </div>
      </div>
    </div>
  </div>
  <div class='col-md-4'>
  </div>
</div>
<hr>
<% end %> 