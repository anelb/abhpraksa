<div class='row'> 
  <div class='col-md-12 space'>
    <%= link_to "<span id='remove-item' class='glyphicon glyphicon-remove'></span>"
      .html_safe, delete_cart_item_path(f.id),  method: :delete, data: { confirm: 'Are you sure?' } %>
    <div id='cart-picture' class='col-md-3'>
      <img src="<%= f.product_variant.product.picture_link %>" width='150' height='auto'>
    </div>
    <div id='product-details' class='col-md-6 cart-details'>
      <p>Model: <%= f.product_variant.product.brand.title %></p>
      <p>Veliƒçina: <%= f.product_variant.size.product_size %></p>
      <p>Boja: <%= f.product_variant.color.product_color %></p>
      <p>ID: <%= f.product_variant.id %></p>
    </div>
    <div id='cart-info' class='col-md-3'>
      <div class="row">
        <div class='pull-right'>
          <p style='margin-bottom: 0px'>Cijena:</p>
          <p><strong><%= f.product_variant.product.price %>KM</strong></p>
        </div>
      </div>
      <div class="row">
        <div class='pull-right'>
          <p style='display: inline-block'>Kolicina:</p>
          <div id='quantity-cart'>
            <p><%= f.quantity %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>