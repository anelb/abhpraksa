
<% content_for :admin_navbar_new_shoes, render('admin/products/admin_navbar_new_shoes') %>
<div class="row">
	<table class='table table-bordered table-hover'>
		<thead>
		  <tr>
		    <th>Naziv</th>
		    <th>Kategorija</th>
		    <th>Brand</th>
		    <th>Cijena</th>
		    <th style='text-align: center; width: 6%; padding-left: 0px !important'>Opcije</th>
		  </tr>
		</thead>
		<tbody>
		<% @products.each do |product| %>
		  <tr>
		    <td><%= product.title %></td>
		    <td><%= product.capitalize_category %></td>
		    <td><%= product.brand.title %></td>
		    <td><%= product.price %></td>
		    <td style='text-align: center; width: 6%; padding-left: 0px !important'>
		    	<%= link_to "<span class='glyphicon glyphicon-edit admin-icon'></span>".html_safe, 
		    		edit_admin_product_path(product), title: 'Edit product' %>
	        <%= link_to "<span class='glyphicon glyphicon-trash admin-icon'></span>".html_safe,            admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete product' %>
		    </td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>

<script>
$(document).ready(function() {
    $('#dashboard-title').find('a').each(function() {
    if (this.href == window.location.href) {
        $(this).addClass('active-link')
        }
    });
});
</script>


