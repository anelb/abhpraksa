<fieldset>
  <div class='col-md-4'>
    <div class='form-group'>
      <%= f.label :velicina %>
      <%= f.collection_select :size_id, Size.all, :id, :product_size, {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class='col-md-4'>
    <div class='form-group'>
      <%= f.label :boja %>
      <%= f.collection_select :color_id, Color.all, :id, :product_color, {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class='col-md-2'>
    <div class='form-group'>
      <%= f.label :kolicina %>
      <%= f.number_field :quantity,  { value: f.object.quantity, min: 1, class: 'form-control' }  %>
    </div>
  </div>
  <div class='col-md-2'>
    <%= f.hidden_field :_destroy %>
    <%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, '#', class: 'remove_fields' %>
  </div>
</fieldset> 