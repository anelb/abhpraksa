<% content_for :admin_navbar_new_user, render('admin/users/admin_navbar_new_user') %>
<div class='row' style='border: 1px solid #ECECEC; padding: 40px'>
  <%= form_for @user, url: { controller: 'admin/users', action: 'create' } do |f| %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <p style='font-size: 14px; color: #b30000'><%= message %></p>
      <% end %>
    <% end %>
    <div class='row' style='margin-bottom: 80px'>
      <div class='row'>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :nil, 'Korisnicko ime' %>
            <%= f.text_field :username, class: 'form-control' %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :ime, 'Ime' %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :prezime %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :nil, 'Šifra' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <%= f.label :nil, 'Potvrdi šifru' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>
    <div class='row'>
      <div class='form-group pull-right'>
        <%= f.submit 'KREIRAJ KORISNIKA', class: 'btn create-new' %>
      </div>
      <%= link_to 'ODUSTANI', admin_users_path, class: 'pull-right btn odustani' %>
    </div>
  <% end %>
</div>  
  

