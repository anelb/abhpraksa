
<div class='row'>
  <div id='dashboard-title' class='col-md-10'>
    <ul class='list-inline'>
      <%= render 'admin/dashboard/navbar/links' %>
    </ul>
  </div>
  <div class='col-md-2'>
    <%= link_to "DODAJ KATEGORIJU", new_admin_category_path, class: 'btn create-new pull-right'  %>
  </div>
</div>
<div class="row">
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
        <th>Naziv</th>
        <th style='text-align: center; width: 6%; padding-left: 0px !important'>Opcije</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td style='text-align: center; width: 6%; padding-left: 0px !important'>
          <%= link_to "<span class='glyphicon glyphicon-edit admin-icon'></span>".html_safe, 
            edit_admin_category_path(category), title: 'Edit category' %>
          <%= link_to "<span class='glyphicon glyphicon-trash admin-icon'></span>".html_safe, admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete category' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script>
$(document).ready(function() {
    $('#dashboard-title').find('a').each(function() {
    if (this.href == window.location.href) {
        $(this).addClass('active-link')
        }
    });
});
</script>